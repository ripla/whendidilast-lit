{
    "compilerOptions": {
      "allowJs": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
    },

    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
    ]
}